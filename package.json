{
  "name": "vue-safeguard",
  "version": "1.0.0",
  "description": "Vue 3 component/plugin that warns before leaving a page with unsaved changes (beforeunload).",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/renekoch/vue-safeguard.git"
  },
  "homepage": "https://github.com/renekoch/vue-safeguard#readme",
  "author": "Rene Koch <renekoch@hotmail.com>",
  "type": "module",
  "main": "./dist/vue-safeguard.umd.cjs",
  "module": "./dist/vue-safeguard.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-safeguard.es.js",
      "require": "./dist/vue-safeguard.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "vite": "^7.1.12",
    "vue": "^3.3.0"
  },
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/renekoch/vue-safeguard/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "beforeunload",
    "unsaved",
    "guard",
    "confirm-exit",
    "plugin",
    "component"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
